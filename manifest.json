{
	"manifest_version": 2,
	"name": "Download script generator",
	"description": "Download script generator",
	"version": "1.0",
	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup": "popup.html",
		"default_title": "Generate script"
	},
	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*"
	],
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"js/content.js"
			]
		}
	]
}
